{
    "name": "@tetris/web",
    "private": true,
    "version": "0.0.0",
    "description": "Web version of tetris",
    "author": "Anders <and3k5@users.noreply.github.com>",
    "homepage": "https://github.com/and3k5/tetris/tree/master/packages/web#readme",
    "license": "MIT",
    "main": "src/index.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/and3k5/tetris.git"
    },
    "scripts": {
        "build": "npx cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" npx webpack --env mode=production",
        "watch": "npx cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" npx webpack --env mode=development --watch",
        "build-dev": "npx cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" npx webpack --env mode=development --env mode=development",
        "host": "mkdir -p dist && cd dist && npx http-server -a 127.0.0.1",
        "test": "npx cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" npx karma start --single-run"
    },
    "bugs": {
        "url": "https://github.com/and3k5/tetris/issues"
    },
    "dependencies": {
        "@tetris/core": "file:../core"
    },
    "eslintConfig": {
        "ignorePatterns": [
            "/dist/**/*",
            "/__tests__/**/*"
        ]
    },
    "devDependencies": {
        "babel-loader": "^8.2.2",
        "css-loader": "^3.2.0",
        "file-loader": "^4.2.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^5.6.4",
        "http-server": "^14.1.1",
        "jasmine-core": "^3.5.0",
        "karma": "^6.1.0",
        "karma-babel-preprocessor": "^8.0.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-jasmine": "^2.0.1",
        "karma-webpack": "^4.0.0",
        "lerna": "^6.0.3",
        "puppeteer": "^24.23.0",
        "style-loader": "^1.0.0"
    }
}
